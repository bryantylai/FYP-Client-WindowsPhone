                    </Grid>-->

                    <ListBox x:Name="LeaderboardListBox" Grid.Row="1" Grid.Column="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="420">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.3*" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25" />
                                        <RowDefinition Height="25" />
                                    </Grid.RowDefinitions>

                                    <!--<TextBlock Grid.Column="0" Grid.RowSpan="2" Text="1" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />-->
                                    <Image Grid.Column="1" Grid.RowSpan="2" Width="50" Height="50" Source="{Binding PlayerProfileImage}" />
                                    <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding PlayerName}" FontSize="20" Padding="20 5 0 0" VerticalAlignment="Center" />
                                    <!--<TextBlock Grid.Column="2" Grid.Row="1" FontSize="15" Padding="20 0 0 0" VerticalAlignment="Top">
                                        <Run Text="Level" />
                                    </TextBlock>-->
                                    <TextBlock Grid.Column="3" Grid.RowSpan="2" Text="{Binding Point}" FontSize="20" Margin="0 0 15 0" TextAlignment="Right" VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </phone:PanoramaItem>
        </phone:Panorama>
    </Grid>

</phone:PhoneApplicationPage>